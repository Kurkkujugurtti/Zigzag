{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Build",
			"program": "${workspaceFolder}/bin/Debug/net5.0/Vivid.dll",

			// Builds the standard library
			//"args": [ "${workspaceFolder}/libv/Array.v", "${workspaceFolder}/libv/Console.v", "${workspaceFolder}/libv/Core.v", "${workspaceFolder}/libv/List.v", "${workspaceFolder}/libv/Math.v", "${workspaceFolder}/libv/String.v", "${workspaceFolder}/libv/Types.v", "-f", "-static" ],

			"cwd": "${workspaceFolder}",
			"console": "internalConsole",
			"stopAtEntry": false,
			"logging": {
				"moduleLoad": false
		  	}
		},
		{
			"name": "Run Units",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Units",
			"program": "${workspaceFolder}/bin/Units/net5.0/Vivid.dll",
			"cwd": "${workspaceFolder}",
			"console": "internalConsole",
			"args": [ ],
			"stopAtEntry": false,
			"logging": {
				"moduleLoad": false
			}
		},
		{
			"type": "by-gdb",
			"request": "launch",
			"name": "Vivid Debug",
			"program": "${workspaceRoot}/v.exe",
			"cwd": "${workspaceRoot}"
		},
		{
			"name": "Vivid Debug (Fallback)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/v.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
	]
}